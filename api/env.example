# NOTE: Rename this file to `.env` (or `.env.example`) in your environment.
# In this workspace, creating dotfiles may be restricted.

# Server
PORT=4000
CORS_ORIGINS=http://localhost:3000

# Auth (JWT + static users JSON)
JWT_SECRET=change_me_please_min_16_chars
# Example:
# AUTH_USERS=[{"username":"admin","passwordHash":"$2a$10$...","role":"admin"},{"username":"attorney1","passwordHash":"$2a$10$...","role":"attorney"}]
AUTH_USERS=[]
JWT_ACCESS_TTL_MINUTES=30

# Database
DATABASE_URL=postgresql://USER:PASSWORD@HOST:PORT/DATABASE

# Azure Storage
AZURE_STORAGE_CONNECTION_STRING=
AZURE_STORAGE_CONTAINER=lexmedical-pdfs

# IMAP (Outlook)
IMAP_ENABLED=true
IMAP_HOST=outlook.office365.com
IMAP_PORT=993
IMAP_SECURE=true
IMAP_USER=
IMAP_PASSWORD=
IMAP_MAILBOX=INBOX
IMAP_FROM_FILTER=mira@wijnbergen-adv.co.il

# Optional (existing features)
AZURE_OCR_ENDPOINT=
AZURE_OCR_KEY=
AZURE_OCR_MODEL_ID=prebuilt-read

AZURE_SEARCH_ENDPOINT=
AZURE_SEARCH_API_KEY=
AZURE_SEARCH_INDEX=lexmedical-knowledge

AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_DEPLOYMENT=

UNPAYWALL_EMAIL=
PUBMED_API_KEY=
SEMANTIC_SCHOLAR_API_KEY=


